// Toggle switch Petri Net
digraph ToggleSwitchNet {

    /* Place Entities */
    {
        node [shape=circle]
        Pin [label="IN"+"\n●1"]
        Pout [label="OUT"]
    }
    /* Transition Entities */
    {
        node [shape=square]
        Ton [label="On"]
        Toff [label="Off"]
    }
    
    /* Relationships */
    Pin -> Ton
    Ton -> Pout
    Pout -> Ton [arrowhead=dot, label="<0>"]
    Pin -> Toff
    Pout -> Toff
}